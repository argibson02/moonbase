<h1>Dashboard</h1>
<p><a class="link" href="/dashboard/new">New Post</a></p>
<div class="row">
    <div id="heading-container col-10" class="justify-content-center">
        <ul class="list-group list-group-horizontal dashboard-group" id="list-tab" role="tablist">
            <li class="dashboard-btn"><a class="list-group-item list-group-item-action active btn-el"
                    id="list-post-list" data-bs-toggle="list" href="#list-post" role="tab"
                    aria-controls="list-post">Posts</a></li>
            <li class="dashboard-btn"><a class="list-group-item list-group-item-action btn-el" id="list-comment-list"
                    data-bs-toggle="list" href="#list-comment" role="tab" aria-controls="list-comment">Comments</a></li>
            <li class="dashboard-btn"><a class="list-group-item list-group-item-action btn-el" id="list-hype-list"
                    data-bs-toggle="list" href="#list-hype" role="tab" aria-controls="list-hype">Hypes</a></li>
        </ul>
    </div>

    <div style="margin: 0px auto"class="col-10">
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="list-post" role="tabpanel" aria-labelledby="list-post-list">
                {{!-- RENDER POSTS HERE --}}
                {{#each posts as |post|}}

                {{> postElements post }}
                {{else}}
                <p style="text-align: center;">No Posts</p>
                {{/each}}
            </div>
            <div class="tab-pane fade" id="list-comment" role="tabpanel" aria-labelledby="list-comment-list">
                {{!-- RENDER COMMENTS HERE --}}
                {{#each comments as |comment|}}

                {{> commentElements comment }}
                {{else}}
                <p style="text-align: center;">No Comments</p>
                {{/each}}
            </div>
            <div class="tab-pane fade" id="list-hype" role="tabpanel" aria-labelledby="list-hype-list">
                {{!-- RENDER HYPE HERE --}}
                {{#each hypes as |hype|}}

                {{> hypeElements hype }}
                {{else}}
                <p style="text-align: center;">No Hypes</p>
                {{/each}}
            </div>
        </div>
    </div>
</div>