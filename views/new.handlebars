{{!-- adding a new post --}}
<div class="mb-3 w-75">
    <h2 class="">Create a post</h2>
    <form class="new-post-form form-group">
        <label class="form-label" for="title">
            Title:
        </label>
        <br />
        <input id="title" class="form-control row" type="text" placeholder="Big Gainz Here 🚀" aria-label="post title"
            name="title">{{title}}</input>
        <!-- may need to chagne this back to a textarea for handlwbrs -->
        <br />
        <label class="form-label" for="ticker">
            Ticker:
        </label>
        <br />
        <input id="ticker" class="form-control row" type="text" placeholder="MOON!" aria-label="ticker" name="ticker"
            maxlength="6">{{ticker}}</input>
        <!-- may need to chagne this back to a textarea for handlwbrs -->
        <br />
        <label class="form-label" for="description">
            Description:
        </label>
        <br />
        <textarea id="description" class="form-control row"
            placeholder="Dump all my savings into gourd 🎃 futures, earned 5.5 mil, and you can too!"
            aria-label="ticker" name="ticker" name="description" rows="5" cols="30">
          {{description}}
        </textarea>
        <div class="row">
            <input type="radio" class="btn-check" name="options-outlined" id="bear-btn" autocomplete="off">
            <label class="btn btn-outline-danger custom-btn" for="bear">🐻 Bearish 📉</label>
            <input type="radio" class="btn-check" name="options-outlined" id="bull-btn" autocomplete="off">
            <label class="btn btn-outline-success custom-btn" for="bull">🐮 Bullish 📈</label>
        </div>
        <button class="btn btn-secondary custom-btn" type="submit" value="Submit">
            Submit
        </button>
    </form>
</div>
<script src="/js/new-post.js"></script>