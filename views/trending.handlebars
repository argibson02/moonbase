<div class="container">
    <div class="row">
        {{#each stock}}
        <div class="col-md-4 justify-content-center h-100">
            <a class="card border-dark mb-3 list-group-item-action" href="/stock/{{ticker}}" style="max-width: 18rem;">
                <div class="card-header"></div>
                <div class="card-body text-dark">
                    <p class="card-title fw-bold">{{ticker}} - {{name}}</p>
                    <div class="">
                        <p class="card-text">Price: ${{price}}</p>
                        <p class="card-text">Change: ${{change}}</p>
                        <p class="card-text">Percent Change {{percent_change}}%</p>
                        <p class="card-text">Open: ${{open}}</p>
                        <p class="card-text">High: ${{high}}</p>
                        <p class="card-text">Low: ${{low}}</p>
                    </div>
                </div>
            </a>
        </div>
        {{/each}}
    </div>
</div>

