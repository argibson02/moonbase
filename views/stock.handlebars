<div class="container">
    <div class="row">
        <div class="col text-center">
            <h1 class="stock">${{ticker}}</h1>
            <h1 class="stock">${{price}}</h1>
        </div>
        {{!-- <div class="col text-center">
            
        </div> --}}
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col text-center">
            <h4 id="stocklabel">change</h4>
            <h2 class="stock">${{change}}</h2>
        </div>
        <div class="col text-center">
            <h4 id="stocklabel">% change</h4>
            <h2 class="stock">{{percent_change}}%</h2>
        </div>
        <div class="col text-center">
            <h4 id="stocklabel">open</h4>
            <h2 class="stock">${{open}}</h2>
        </div>
        <div class="col text-center">
            <h4 id="stocklabel">high</h4>
            <h2 class="stock">${{high}}</h2>
        </div>
        <div class="col text-center">
            <h4 id="stocklabel">low</h4>
            <h2 class="stock">${{low}}</h2>
        </div>
    </div>
</div>

{{#each posts as |post|}}
<div class="card mt-3" style="width: 100%;" data-post-id="{{post.id}}">
    <a href="/post/{{post.id}}" style="text-decoration: none;">
        <h3 class="card-title px-2 py-1">🔥<span id="hypecount"></span>🔥</h3>
        <h3 class="card-title px-2 py-1"> {{post.title}}</h3>
    </a>
    <div class="card-body">
        <p class="card-text">{{post.description}}</p>
    </div>
    <div class="card-body">
        <button type="button" class="btn btn-warning" id="hype-btn">🔥 HYPE 🔥</button>
        <button type="button" class="btn btn-outline-success" id="bull-btn">{{post.bull_count}} 🐮</button>
        <button type="button" class="btn btn-outline-danger" id="bear-btn">{{post.bear_count}} 🐻</button>
    </div>
    <div class="card-footer text-muted">
        Posted by {{post.user.username}} on {{format_date post.date_created}}
    </div>
</div>
{{/each}}

<script src="./js/feed.js"></script>