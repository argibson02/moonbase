<div class="card mb-3">
  <div class="card-body">
    <p class="card-text text-muted">
        {{format_date date_created}}
        {{#if bear_count}}
        <div>
          <div class="danger badge rounded-pill bg-danger lg-col-2 md-col-4">🐻
            Bearish 📉</div>
        </div>
      {{/if}}
      {{#if bull_count}}
        <div>
          <div class="danger badge rounded-pill bg-success lg-col-2 md-col-4">🐮
            Bullish 📈</div>
        </div>
      {{/if}}
    </p>
    <p class="card-title">{{text_body}}</p>
    <a href="/post/{{post_id}}" class="btn btn-primary">View Post</a>
  </div>
</div>